    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            color: darkgreen;
            text-align: center;
        }
        p {
            color: darkgreen;
            text-align: center;
        }
        label {
            color: darkgreen;
            display: block;
            margin-top: 10px;
        }
        input[type="number"] {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            box-sizing: border-box;
        }
        .result {
            color: darkgreen;
            font-weight: bold;
